<div class="home-page">
  <div class="banner">
    <div class="container">
      <h1 class="logo-font">conduit</h1>
      <p>A place to share your knowledge.</p>
      <!--link_to(リンクの文字列, URL, オプション)-->
      <%= link_to "Logout", logout_path, class: "logout", data: { turbo_method: :delete } %>
    </div>
  </div>
  <div class="container page">
    <div class="row">
      <div class="col-md-9">
        <div class="feed-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <%= link_to "Your Feed", documents_path(feed: "your"), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Global Feed", documents_path(feed: "global"), class: "nav-link" %>
            </li>
          </ul>
        </div>
        <% @documents.each do |d| %>
        <div class=" article-preview">
          <div class="article-meta">
            <div class="info">
              <a href=# class="author">ユーザーNo: <%= d.user_id %></a>
              <span class="date"><%= d.created_at %></span>
            </div>
          </div>
          <!--show詳細ページ-->
          <h1><a href="/documents/<%= d.id %>"><%= d.title %>
            </a>
          </h1>
          <p><%= d.article_about %></p>
          <span>Read more...</span>
          <ul class=" tag-list">
            <li class="tag-default tag-pill tag-outline"><%= d.article_tag %></li>
          </ul>
          </a>
        </div>
        <% end %>
        <ul class="pagination">
          <a href="/documents/new" class="btn btn-primary">Create</a>
          <li class="page-item active">
            <%= link_to 1, documents_path(feed: params[:feed], page: 1), class: "page-link" %>
          </li>
          <li class="page-item">
            <%= link_to 2, documents_path(feed: params[:feed], page: 2), class: "page-link" %>
          </li>
        </ul>
      </div>
      <div class="col-md-3">
        <div class="sidebar">
          <p>Popular Tags</p>
          <div class="tag-list">
            <a href="" class="tag-pill tag-default">programming</a>
            <a href="" class="tag-pill tag-default">javascript</a>
            <a href="" class="tag-pill tag-default">emberjs</a>
            <a href="" class="tag-pill tag-default">angularjs</a>
            <a href="" class="tag-pill tag-default">react</a>
            <a href="" class="tag-pill tag-default">mean</a>
            <a href="" class="tag-pill tag-default">node</a>
            <a href="" class="tag-pill tag-default">rails</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>